# ===========================================
# E-Commerce CMS - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# cp .env.example .env.local

# -------------------------------------------
# Database (PostgreSQL)
# -------------------------------------------
# Local Docker: postgresql://postgres:postgres@localhost:5432/cms_ecommerce
# Railway: Get from Railway dashboard
# Neon: Get from Neon dashboard
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/cms_ecommerce"

# -------------------------------------------
# NextAuth.js
# -------------------------------------------
# Generate secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# -------------------------------------------
# Google OAuth (Optional)
# -------------------------------------------
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# -------------------------------------------
# Razorpay (Payments)
# -------------------------------------------
# Get from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=""
RAZORPAY_KEY_SECRET=""
RAZORPAY_WEBHOOK_SECRET=""

# -------------------------------------------
# Cloudinary (Image Storage)
# -------------------------------------------
# Get from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# -------------------------------------------
# Resend (Transactional Emails)
# -------------------------------------------
# Get from: https://resend.com/api-keys
RESEND_API_KEY=""
FROM_EMAIL="onboarding@resend.dev"

# -------------------------------------------
# Site Configuration
# -------------------------------------------
# Your production URL (without trailing slash)
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Google site verification (for SEO)
GOOGLE_SITE_VERIFICATION=""

# -------------------------------------------
# Cron Jobs / Scheduled Tasks
# -------------------------------------------
# Secret for securing cron endpoints (generate random string)
CRON_SECRET=""

# Abandoned Cart Recovery Settings
ABANDONED_CART_HOURS="1"          # Hours after abandonment to send email
ABANDONED_CART_BATCH_SIZE="10"    # Max emails per cron run



# Store Configuration (for emails)
STORE_NAME="Your Store Name"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
